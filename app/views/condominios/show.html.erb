<%- model_class = Condominio -%>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
      <dd><%= @condominio.nome %></dd>
      <dt><strong><%= model_class.human_attribute_name(:cnpj) %>:</strong></dt>
      <dd><%= @condominio.cnpj %></dd>
    </dl>

    <%= link_to t('.back', :default => t("helpers.links.back")),
                  condominios_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_condominio_path(@condominio), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  condominio_path(@condominio),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
  </div>
</div>


