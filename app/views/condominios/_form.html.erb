<%= form_for @condominio, :html => { :class => "form-horizontal condominio" } do |f| %>
<%= bootstrap_flash %>

    <% if @condominio.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@condominio.errors.count, "error") %> prohibited this condominio from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @condominio.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%= error_span(@condominio[:nome]) %>
  </div>
  <div class="control-group">
    <%= f.label :cnpj, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cnpj, :class => 'form-control' %>
    </div>
    <%= error_span(@condominio[:cnpj]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            condominios_path, :class => 'btn btn-default' %>

<% end %>
