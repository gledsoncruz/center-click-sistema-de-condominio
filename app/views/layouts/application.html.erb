<!DOCTYPE html>
<html>
<head>
  <title>CenterClick Condominios</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= nav_bar brand: "CenterClick Condominios", responsive: true, inverse: true do %>

    <% if user_signed_in? %>
      <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_item "Condominios", condominios_path %>
        <%= menu_item "Blocos", blocos_path %>
        <%= menu_item "Torres", torres_path %>
        <%= menu_item "Unidades", unidades_path %>
        <%= menu_item "Pessoas", pessoas_path %>
      <% end %>
      <%= menu_group pull: :right do %>
        <%= menu_item "Logout", destroy_user_session_path, :method => :delete %>
      <% end %>
    <% else %>
      <%= menu_group pull: :right do %>
        <%= menu_item "Login", new_user_session_path  %>
      <% end %>
    <% end %>
<% end %>
  <div class="container-fluid">
    <%= yield %>
    <div class="text-center"><b>Vers√£o:</b> <%= show_version %> - <%= show_version_date %></div>
  </div>
</body>
</html>
