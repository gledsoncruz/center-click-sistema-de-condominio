<%= bootstrap_form_for(@bloco, layout: :horizontal, label_col: "col-sm-0", control_col: "col-sm-8") do |f| %>
<%= f.alert_message "Por favor, verifique os campos abaixo.", error_summary: false %>
  <%= f.label 'Condomínio' %>
  <%= f.collection_select :condominio_id, Condominio.all, :id, :nome, skip_label: true  %>
  <%= f.label :descricao %>
  <%= f.text_field :descricao, skip_label: true %>
  <%= f.label :sigla %>
  <%= f.text_field :sigla, skip_label: true %>
  <%= f.form_group do %>
    <%= f.submit 'Submeter Formulário', class: "btn btn-primary"%>
    <%= link_to t('.back', :default => t("helpers.links.back")),
              blocos_path, :class => 'btn btn-default'  %>
  <% end %>
<% end %>

