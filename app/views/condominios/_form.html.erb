
<%= bootstrap_form_for(@condominio, layout: :horizontal) do |f| %>
<%= f.alert_message "Por favor, verifique os campos abaixo.", error_summary: false %>
  <%= f.text_field :nome %>
  <%= f.text_field :cnpj %>
  <%= f.form_group do %>
    <%= f.submit 'Criar Condominio', class: "btn btn-primary"%>
  <% end %>
<% end %>

